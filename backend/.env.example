# Пример файла конфигурации
# Скопируйте этот файл в .env и заполните значения

# Настройки базы данных
# Для SQLite укажите путь к файлу: sqlite:///./database.db
# Для PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./database.db

# Секретный ключ для JWT-токенов (сгенерируйте свой: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-in-production

# Время жизни токена в минутах
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Режим отладки
DEBUG=true

# Разрешённые хосты для CORS (через запятую)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
